<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelatorioActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ministeriodaeducacao"
        android:id="@+id/ministerioeducação"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/instituto"
        app:layout_constraintStart_toStartOf="parent"/>

     <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ifam"
            android:id="@+id/ifamlogo"
         android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@id/ministerioeducação"
         app:layout_constraintStart_toEndOf="@id/instituto"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ministerioeducação"
            android:textSize="20sp"
            android:text="MINISTÉRIO DE EDUCAÇÃO"
            android:id="@+id/ministeriodaeducacaotext"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ministeriodaeducacaotext"
            android:textSize="20sp"
            android:text="SECRETARIA DE EDUCAÇÃO MÉDIA E TECNOLÓGICA"
            android:id="@+id/secretaria"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secretaria"
            android:textSize="20sp"
            android:text="INSTITUTO FEDERAL DE EDUCAÇÃO, CIÊNCIA E TECNOLOGIA"
            android:id="@+id/instituto"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instituto"
            android:textSize="20sp"
            android:text="DIRETORIA DE ENSINO – DIREN"
            android:id="@+id/diren"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diren"
            android:textSize="20sp"
            android:text="DEPARTAMENTO DE COMUNICAÇÃO DE INFORMAÇÃO E TECNOLOGIA"
            android:id="@+id/daic"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corporelatorio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daic"
            android:layout_marginTop="30dp"
            android:id="@+id/corporelatorio">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relatório de atendimento N:"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/relatorion"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAIC/CMC/2024:"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/relatorion"
                android:id="@+id/daiccmc"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/relatorion"
                android:id="@+id/divisor1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/dadosid"
                android:text="1. Dados de identificação: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor1"/>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dadosid"
                android:id="@+id/divisor2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/datatext"
                android:text="1.1 Data: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor2"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/horariotext"
            android:text="1.2 Horário: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/datatext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/localtext"
                android:text="1.3 Local: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/datatext"
                android:layout_marginEnd="200dp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/datatext"
                android:id="@+id/divisor3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/discentetext"
                android:text="1.4 Discente: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/turmatext"
                android:text="1.5 Turma: "
                app:layout_constraintStart_toStartOf="@id/localtext"
                app:layout_constraintTop_toTopOf="@id/discentetext"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/discentetext"
                android:id="@+id/divisor4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/nomepaistext"
                android:text="1.6 Nome dos responsáveis pelo discente: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor4"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/nomepaistext"
                android:id="@+id/divisor5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/acompanhamentotext"
                android:text="2. Acompanhamento pedagógico "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor5"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/acompanhamentotext"
                android:id="@+id/divisor6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/acoesdesenvolvidastext"
                android:text="2.1 Ações desenvolvidas para atendimento da situação: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor6"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:id="@+id/acoesdesenvolvidasedit"

                app:layout_constraintTop_toBottomOf="@id/acoesdesenvolvidastext"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/acoesdesenvolvidasedit"
                android:id="@+id/divisor7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/encaminhamentostext"
                android:text="3. Encaminhamentos: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor7"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:id="@+id/encaminhamentosedit"

                app:layout_constraintTop_toBottomOf="@id/encaminhamentostext"
                />


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/encaminhamentosedit"
                android:id="@+id/divisor8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/conclusaotext"
                android:text="4. Conclusão: "
                app:layout_constraintStart_toStartOf="@id/relatorion"
                app:layout_constraintTop_toBottomOf="@id/divisor8"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:id="@+id/conclusaodit"
                app:layout_constraintTop_toBottomOf="@id/conclusaotext"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
