<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/ministeriodaeducacao__3_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MINISTÉRIO DA EDUCAÇÃO\n SECRETARIA DE EDUCAÇÃO MÉDIA E TECNOLÓGICA\n
            INSTITUTO FEDERAL DE EDUCAÇÃO, CIÊNCIA E TECNOLOGIA\n DIRETORIA DE ENSINO - DIREN\n
            DEPARTAMENTO ACADÊMICO DE INFORMAÇÃO E COMUNICAÇÃO"

            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ifam__2_" />
    </androidx.appcompat.widget.Toolbar>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/retangulobordas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="300dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bordasretangulo"/>

            <TextView
                android:id="@+id/relatorion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relatório N:"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"
                app:layout_constraintTop_toTopOf="@id/retangulobordas"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/numerorelatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/relatorion"
                app:layout_constraintTop_toTopOf="@id/retangulobordas"
                android:layout_marginTop="3dp"
                android:hint="Numero"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/daic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAIC/CMC/2024"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@id/numerorelatorio"
                app:layout_constraintTop_toTopOf="@id/retangulobordas"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

             <View
                 android:id="@+id/separador"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:background="@color/black"
                 android:layout_marginTop="7dp"
                 app:layout_constraintTop_toBottomOf="@id/relatorion"
                 android:layout_marginHorizontal="300dp"
                 />

            <TextView
                android:id="@+id/dadosid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Dados de identificação"
                app:layout_constraintTop_toTopOf="@id/separador"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"/>

            <View
                android:id="@+id/separador2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/dadosid"
                android:layout_marginHorizontal="300dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/datatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.1 Data:"
                app:layout_constraintTop_toTopOf="@id/separador2"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"/>

            <EditText
                android:id="@+id/dataedit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/datatext"
                app:layout_constraintTop_toTopOf="@id/separador2"
                android:layout_marginTop="3dp"
                android:hint="Data"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/horariotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@id/dataedit"
                app:layout_constraintTop_toTopOf="@id/separador2"
                android:layout_marginTop="10dp"
                android:text="1.2 Horário:"
                android:layout_marginStart="10dp"
                />

            <EditText
                android:id="@+id/horarioedit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/horariotext"
                app:layout_constraintTop_toTopOf="@id/separador2"
                android:layout_marginTop="3dp"
                android:hint="Horário"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/localtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@id/horarioedit"
                app:layout_constraintTop_toTopOf="@id/separador2"
                android:layout_marginTop="10dp"
                android:text="1.3 Local:"
                android:layout_marginStart="10dp"
                />

            <EditText
                android:id="@+id/localedit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/localtext"
                app:layout_constraintTop_toTopOf="@id/separador2"
                android:layout_marginTop="3dp"
                android:hint="Local"
                android:layout_marginStart="5dp"/>


            <View
                android:id="@+id/separador3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/datatext"
                android:layout_marginHorizontal="300dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/discentetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.4 Discente:"
                app:layout_constraintTop_toTopOf="@id/separador3"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"/>

            <EditText
                android:id="@+id/discenteedit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/discentetext"
                app:layout_constraintTop_toTopOf="@id/separador3"
                android:layout_marginTop="3dp"
                android:hint="Discente"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/turmatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@id/discenteedit"
                app:layout_constraintTop_toTopOf="@id/separador3"
                android:layout_marginTop="10dp"
                android:text="1.5 Turma:"
                android:layout_marginStart="15dp"

                />

            <EditText
                android:id="@+id/turmaedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/turmatext"
                app:layout_constraintTop_toTopOf="@id/separador3"
                android:layout_marginTop="3dp"
                android:hint="Turma"
                android:layout_marginStart="5dp"/>

            <View
                android:id="@+id/separador4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/discentetext"
                android:layout_marginHorizontal="300dp"
                />

            <TextView
                android:id="@+id/paisdiscentetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.6 Nome dos responsáveis:"
                app:layout_constraintTop_toTopOf="@id/separador4"
                android:textSize="25sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"/>

            <EditText
                android:id="@+id/paisdiscenteedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/paisdiscentetext"
                app:layout_constraintTop_toTopOf="@id/separador4"
                android:layout_marginTop="3dp"
                android:hint="Nome dos responsáveis pelo discente"
                android:layout_marginStart="5dp"/>

            <View
                android:id="@+id/separador5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/paisdiscentetext"
                android:layout_marginHorizontal="300dp"
                />

             <TextView
                 android:id="@+id/acompanhamentopedagogico"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="25sp"
                 android:layout_marginTop="10dp"
                 android:text="2. Acompanhamento pedagógico"
                 android:layout_marginStart="10dp"
                 app:layout_constraintTop_toTopOf="@id/separador5"
                 app:layout_constraintStart_toStartOf="@id/retangulobordas" />

            <View
                android:id="@+id/separador6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/acompanhamentopedagogico"
                android:layout_marginHorizontal="300dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/acoestext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1 Ações desenvolvidas para o atendimento da situação:"
                app:layout_constraintTop_toTopOf="@id/separador6"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas" />

            <EditText
                android:id="@+id/acoesedit"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:textSize="25sp"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"
                app:layout_constraintTop_toBottomOf="@id/acoestext"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="300dp"
                android:hint="Digite aqui a/as solicitação(es)..."
                />

            <View
                android:id="@+id/separador7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/acoesedit"
                android:layout_marginHorizontal="300dp"
                android:layout_marginTop="0dp" />


            <TextView
                android:id="@+id/encaminhamentostext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Encaminhamentos:"
                app:layout_constraintTop_toTopOf="@id/separador7"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas" />

            <EditText
                android:id="@+id/encaminhamentosedit"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:textSize="25sp"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"
                app:layout_constraintTop_toBottomOf="@id/encaminhamentostext"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="300dp"
                android:hint="Digite aqui os encaminhamentos..."
                />

            ///////////////////////////////////////////////////

            <View
                android:id="@+id/separador8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/encaminhamentosedit"
                android:layout_marginHorizontal="300dp"
                android:layout_marginTop="0dp" />


            <TextView
                android:id="@+id/conclusoestext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Conclusões:"
                app:layout_constraintTop_toTopOf="@id/separador8"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/retangulobordas" />

            <EditText
                android:id="@+id/conclusoesedit"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:textSize="25sp"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@id/retangulobordas"
                app:layout_constraintTop_toBottomOf="@id/conclusoestext"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="300dp"
                android:hint="Digite aqui as conclusões..."
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

