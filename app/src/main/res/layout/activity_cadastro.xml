<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/captura_de_tela_login2"
    android:orientation="vertical"
    tools:context=".Cadastro">


    <TextView
        android:id="@+id/Progest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/merriweather"
        android:text="PROGEST"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ContainerGrande"
        style="@style/ContainerComponents"
        android:layout_marginHorizontal="200dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="169dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Progest" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lato"
        android:text="LOGIN"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@id/ContainerGrande"
        app:layout_constraintStart_toStartOf="@id/ContainerGrande" />


    <EditText
        android:id="@+id/Email"
        style="@style/editText"
        android:layout_marginHorizontal="250dp"
        android:layout_marginTop="50dp"
        android:hint="Email ou nome de usuário"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/ContainerGrande"
        app:layout_constraintStart_toStartOf="@id/ContainerGrande"
        app:layout_constraintTop_toTopOf="@id/ContainerGrande" />

    <EditText
        android:id="@+id/Senha"
        style="@style/editText"
        android:layout_marginHorizontal="250dp"
        android:layout_marginTop="50dp"
        android:hint="Senha"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/ContainerGrande"
        app:layout_constraintStart_toStartOf="@id/ContainerGrande"
        app:layout_constraintTop_toBottomOf="@id/Email" />

    <TextView
        android:id="@+id/esquecisenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Esqueceu a senha?"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/Senha"
        app:layout_constraintTop_toBottomOf="@id/Senha" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/botao"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/botao"
        android:text="Avançar"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/ContainerGrande"
        app:layout_constraintTop_toBottomOf="@id/esquecisenha" />


</androidx.constraintlayout.widget.ConstraintLayout>
