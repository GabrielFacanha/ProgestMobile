<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/bemvindo"
      android:text="PROGEST"
      android:textSize="80sp"
      android:textStyle="bold"
      android:layout_marginTop="100dp"
      android:fontFamily="@font/merriweather_light"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />


  <EditText
      android:layout_width="700dp"
      android:layout_height="wrap_content"
      android:background="@drawable/campotexto"
      android:id="@+id/loginedit"
      android:textColorHint="@color/black"
      android:elevation="10dp"
      android:hint="nome de usuÃ¡rio ou email"
      android:textSize="30sp"
      android:padding="20dp"
      android:layout_marginTop="50dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/bemvindo"/>


  <EditText
      android:layout_width="700dp"
      android:layout_height="wrap_content"
      android:background="@drawable/campotexto"
      android:id="@+id/senhaedit"
      android:elevation="10dp"
      android:hint="senha"
      android:textColorHint="@color/black"
      android:textSize="30sp"
      android:padding="20dp"
      android:password="true"
      android:layout_marginTop="50dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/loginedit"/>

    <TextView
        android:id="@+id/esquecisenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_light"
        android:text="Esqueceu a senha?"
        android:textColor="#0000FF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@id/btnentrar"
        app:layout_constraintEnd_toEndOf="@id/senhaedit"
        app:layout_constraintTop_toBottomOf="@id/senhaedit" />

  <CheckBox
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Manter-me conectado"
      android:textSize="30sp"
      android:id="@+id/manterme"
      android:textStyle="bold"
      android:fontFamily="@font/roboto_light"
      app:layout_constraintTop_toBottomOf="@id/senhaedit"
      app:layout_constraintBottom_toTopOf="@id/btnentrar"
      android:layout_marginTop="30dp"
      app:layout_constraintStart_toStartOf="@id/senhaedit"
    />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnentrar"
      android:layout_width="700dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@drawable/botao"
      android:fontFamily="@font/roboto_light"
      android:padding="20dp"
      android:text="ENTRAR"
      android:textStyle="bold"
      android:textColor="@color/white"
      android:textSize="30sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/manterme" />

  <TextView
      android:id="@+id/criarconta"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/criarconta"
      android:textSize="30sp"
      android:clickable="true"
      android:layout_marginTop="30dp"
      android:fontFamily="@font/roboto_light"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnentrar"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>