<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroSenhaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bemvindo"
        android:text="PROGEST"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/merriweather_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <EditText
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/campotexto"
        android:id="@+id/senhaedit"
        android:textColorHint="@color/black"
        android:elevation="10dp"
        android:hint="Nova senha"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instrucao"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie uma senha para sua conta"
        android:fontFamily="@font/roboto_light"
        android:textStyle="bold"
        android:id="@+id/instrucao"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/bemvindo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnentrar"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/roboto_light"
        android:padding="20dp"
        android:text="AVANÃ‡AR"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/senhaedit" />

</androidx.constraintlayout.widget.ConstraintLayout>